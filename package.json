  "author": {
    "name": "chilijung",
    "email": "chilijung@gmail.com"
  },
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "keywords": [
    "slate",
    "editor",
    "icons"
  ],
  "devDependencies": {
